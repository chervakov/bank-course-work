@{
    ViewData["Title"] = "Clients";
}
@model Bank.ViewModels.ClientViewModel

<form method="post" action="/Bank/EditClient?id=@Model.Id">

    <div class="text-center">
        <h2>@Model.Name @Model.Surname client info</h2>
        @Html.ValidationSummary()
        <div class="text-center">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
        </div>
        <div class="text-center">
            @Html.LabelFor(model => model.Surname)
            @Html.EditorFor(model => model.Surname)
        </div>
        <div class="text-center">
            @Html.LabelFor(model => model.PassportNum)
            @Html.EditorFor(model => model.PassportNum)
        </div>
        <div class="text-center">
            @Html.LabelFor(model => model.PassportSeries)
            @Html.EditorFor(model => model.PassportSeries)
        </div>
        <div class="text-center">
            @Html.LabelFor(model => model.Adress)
            @Html.EditorFor(model => model.Adress)
        </div>
        <div class="text-center">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email)
        </div>
        <input type="submit" name="submit" id="submit" class="form-submit" value="Edit"/>
    </div>
</form>
<form method="post" action="/Bank/DeleteClient?id=@Model.Id">
    <div class="text-center">
        <input type="submit" name="submit" id="submit" class="form-submit" value="Delete"/>
    </div>
</form>
<form method="post" action="/Bank/CreateDeposit?id=@Model.Id">
    <div class="text-center">
        <input type="submit" name="submit" id="submit" class="form-submit" value="Create deposit"/>
    </div>
</form>
<form method="post" action="/Bank/CreateCredit?id=@Model.Id">
    <div class="text-center">
        <input type="submit" name="submit" id="submit" class="form-submit" value="Create credit"/>
    </div>
</form>
<div class="text-center">
    <h3>@Model.Name @Model.Surname DEPOSITS</h3>
    @if (Model.Deposits != null)
    {
    <table class="table table-striped">
        <tr>
            <th><big>Id</big></th>
            <th><big>ClientId</big></th>
            <th><big>Amount</big></th>
            <th><big>Percent</big></th>
        </tr>
        
            @foreach (var item in Model.Deposits)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.IdClient</td>
                    <td>@item.Amount</td>
                    <td>@item.Percent</td>
                </tr>
            }
    </table>
    }
</div>
<div class="text-center">
    <h3>@Model.Name @Model.Surname CREDITS</h3>
    @if (Model.Deposits != null)
    {
    <table class="table table-striped">
        <tr>
            <th><big>Id</big></th>
            <th><big>ClientId</big></th>
            <th><big>Amount</big></th>
            <th><big>Percent</big></th>
            <th><big>Time in month</big></th>
        </tr>
        
            @foreach (var item in Model.Credits)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.IdClient</td>
                    <td>@item.Amount</td>
                    <td>@item.Percent</td>
                    <td>@item.Time</td>
                </tr>
            }
    </table>
    }
</div>